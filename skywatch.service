[Unit]
Description=SkyWatch Smart Camera Capture System
After=network.target

[Service]
Type=simple
User=srboga
WorkingDirectory=/home/srboga/Documents/Projects/skywatch
ExecStart=/home/srboga/Documents/Projects/skywatch/.venv/bin/python /home/srboga/Documents/Projects/skywatch/main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
